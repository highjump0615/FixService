<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- add new -->
    <Button
        android:id="@+id/but_add_payment"
        android:theme="@style/PrimaryFlatButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/payment_item_height"
        android:text="+ Add Payment Method"
        android:textColor="@color/colorTheme"/>

    <!-- existing -->
    <RelativeLayout
        android:id="@+id/layout_card_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_payment_bg"
        android:padding="@dimen/payment_item_padding_margin"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgview_payment_item_mcv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/payment_item_padding_margin" />

        <TextView
            android:id="@+id/text_payment_item_last4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/payment_item_padding_margin"
            android:layout_toRightOf="@+id/imgview_payment_item_mcv"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>