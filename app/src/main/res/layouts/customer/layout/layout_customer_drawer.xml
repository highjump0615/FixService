<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_header_height"
        android:background="@color/colorThemeDark"
        android:padding="@dimen/navigation_header_padding"
        android:src="@drawable/logo"/>

    <!-- posted jobs -->
    <RelativeLayout
        android:id="@+id/layout_nav_posted_job"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_height"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/nav_job"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/admin_main_margin_title"
                android:text="Posted Jobs"
                android:textSize="@dimen/navbar_title_text_size"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/colorGrey"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <!-- post job -->
    <RelativeLayout
        android:id="@+id/layout_nav_post"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_height"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/nav_post"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/admin_main_margin_title"
                android:text="Post a job"
                android:textSize="@dimen/navbar_title_text_size"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/colorGrey"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <!-- my profile -->
    <RelativeLayout
        android:id="@+id/layout_nav_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_height"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/nav_user"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/admin_main_margin_title"
                android:text="My profile"
                android:textSize="@dimen/navbar_title_text_size"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/colorGrey"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <!-- settings -->
    <RelativeLayout
        android:id="@+id/layout_nav_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_height"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/admin_setting"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/admin_main_margin_title"
                android:text="Settings"
                android:textSize="@dimen/navbar_title_text_size"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/colorGrey"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>