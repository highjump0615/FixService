<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brainyapps.e2fix.activities.signin.SignupStripeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/app_bar_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/signup_vertical_margin"
            android:paddingBottom="@dimen/signup_vertical_margin"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="180dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/stripe_logo"/>

            <!-- log in -->
            <EditText
                android:id="@+id/edit_login"
                style="@style/LoginEditTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:hint="Log In"
                android:inputType="textNoSuggestions"
                android:maxLines="1"
                android:singleLine="true" />

            <!-- password -->
            <EditText
                android:id="@+id/edit_password"
                style="@style/LoginEditTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />

            <!-- done -->
            <Button
                android:id="@+id/but_done"
                android:theme="@style/PrimaryButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="DONE" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
