<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brainyapps.ezfix.activities.signin.SignupLandingActivity"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/app_bar_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/logo_theme"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="@dimen/signup_text_size"
                android:text="To continue,\nplease choose the account purpose:" />

            <!-- serviceman button -->
            <RelativeLayout
                android:id="@+id/but_serviceman"
                style="@style/DirectionButStyle"
                android:layout_marginTop="30dp">

                <ImageView
                    style="@style/DirectionButIcon" />

                <TextView
                    style="@style/CustomButTextStyle"
                    android:text="SERVICEMAN" />

            </RelativeLayout>

            <!-- customer button -->
            <RelativeLayout
                android:id="@+id/but_customer"
                style="@style/DirectionButStyle"
                android:layout_marginTop="16dp">

                <ImageView
                    style="@style/DirectionButIcon" />

                <TextView
                    style="@style/CustomButTextStyle"
                    android:text="CUSTOMER" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
