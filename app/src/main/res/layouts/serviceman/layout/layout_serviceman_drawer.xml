<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_header_height"
        android:background="@color/colorThemeDark"
        android:padding="@dimen/navigation_header_padding"
        android:src="@drawable/logo"/>

    <!-- available jobs -->
    <RelativeLayout
        android:id="@+id/layout_nav_available_job"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_height"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/nav_available"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/admin_main_margin_title"
                android:text="Available Jobs"
                android:textSize="@dimen/navbar_title_text_size"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/colorGrey"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <!-- binds won -->
    <RelativeLayout
        android:id="@+id/layout_nav_bid_won"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_height"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/nav_win"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/admin_main_margin_title"
                android:text="Bids won"
                android:textSize="@dimen/navbar_title_text_size"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="11"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/navigation_banner_hori_padding"
                android:paddingRight="@dimen/navigation_banner_hori_padding"
                android:paddingTop="@dimen/navigation_banner_vert_padding"
                android:paddingBottom="@dimen/navigation_banner_vert_padding"
                android:background="@drawable/round_banner_bg"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/colorGrey"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <!-- jobs applied -->
    <RelativeLayout
        android:id="@+id/layout_nav_applied"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_height"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/nav_job"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/admin_main_margin_title"
                android:text="Jobs applied"
                android:textSize="@dimen/navbar_title_text_size"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/colorGrey"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <!-- my profile -->
    <RelativeLayout
        android:id="@+id/layout_nav_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_height"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/nav_user"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/admin_main_margin_title"
                android:text="My profile"
                android:textSize="@dimen/navbar_title_text_size"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/colorGrey"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <!-- settings -->
    <RelativeLayout
        android:id="@+id/layout_nav_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_menu_height"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/admin_setting"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/admin_main_margin_title"
                android:text="Settings"
                android:textSize="@dimen/navbar_title_text_size"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/colorGrey"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>