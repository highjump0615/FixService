<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brainyapps.e2fix.activities.serviceman.BidSubmitActivity"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/toolbar_bg">

            <com.brainyapps.e2fix.views.serviceman.ViewToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rightImage="@drawable/admin_report" />

            <!-- top bar -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="APPLIED JOB DETAILS"
                android:textSize="16sp"
                android:background="@color/colorSemiTran"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/job_margin">

            <include
                layout="@layout/layout_bid_detail_job" />

            <!-- your bid -->
            <RelativeLayout
                style="@style/BidDetailItem"
                android:layout_marginTop="5dp"
                android:background="@android:color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOUR BID"/>
            </RelativeLayout>

            <!-- time -->
            <RelativeLayout
                style="@style/BidDetailItem"
                android:background="@color/colorWhiteBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estimated time to complete the job"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 days"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <!-- price -->
            <RelativeLayout
                style="@style/BidDetailItem"
                android:background="@android:color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total service price"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$200"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                style="@style/BidDetailItem"
                android:layout_marginTop="5dp"
                android:background="@android:color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$20 was paid by the client through the app"
                    android:textColor="@color/colorTheme"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
