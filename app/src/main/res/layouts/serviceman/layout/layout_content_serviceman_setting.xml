<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brainyapps.ezfix.activities.serviceman.JobAvailableActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/toolbar_bg">

            <com.brainyapps.ezfix.views.serviceman.ViewToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- top bar -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="SETTINGS"
                android:textSize="16sp"
                android:background="@color/colorSemiTran"/>

        </LinearLayout>

        <!-- Edit profile -->
        <RelativeLayout
            android:id="@+id/layout_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/admin_main_menu_height"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/admin_edit"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/admin_main_margin_title"
                    android:text="Edit Profile"
                    android:textSize="@dimen/navbar_title_text_size"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/colorGrey"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <!-- payment info -->
        <RelativeLayout
            android:id="@+id/layout_payment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/admin_main_menu_height"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_payment"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/admin_main_margin_title"
                    android:text="Payment Information"
                    android:textSize="@dimen/navbar_title_text_size"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/colorGrey"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <!-- privacy policy -->
        <RelativeLayout
            android:id="@+id/layout_privacy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/admin_main_menu_height"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_privacy"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/admin_main_margin_title"
                    android:text="@string/privacy_title"
                    android:textSize="@dimen/navbar_title_text_size"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/colorGrey"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <!-- terms & conditions -->
        <RelativeLayout
            android:id="@+id/layout_term"
            android:layout_width="match_parent"
            android:layout_height="@dimen/admin_main_menu_height"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_term"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/admin_main_margin_title"
                    android:text="@string/terms_title"
                    android:textSize="@dimen/navbar_title_text_size"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/colorGrey"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <!-- rate -->
        <RelativeLayout
            android:id="@+id/layout_rate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/admin_main_menu_height"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_rate"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/admin_main_margin_title"
                    android:text="Rate App"
                    android:textSize="@dimen/navbar_title_text_size"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/colorGrey"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <!-- report -->
        <RelativeLayout
            android:id="@+id/layout_report"
            android:layout_width="match_parent"
            android:layout_height="@dimen/admin_main_menu_height"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setting_report"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/admin_main_margin_title"
                    android:text="Report a Problem"
                    android:textSize="@dimen/navbar_title_text_size"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/colorGrey"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


        <!-- Log out -->
        <RelativeLayout
            android:id="@+id/layout_reported_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/admin_main_menu_height"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <RelativeLayout
                android:id="@+id/layout_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/admin_logout"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/admin_main_margin_title"
                    android:text="Log Out"
                    android:textSize="@dimen/navbar_title_text_size"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/colorGrey"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
